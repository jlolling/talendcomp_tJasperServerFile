<COMPONENT>

  <HEADER
    PLATEFORM="ALL"
    SERIAL=""
    VERSION="2.2"
    STATUS="PROD"
    COMPATIBILITY="ALL"
    AUTHOR="cimt AG"
    RELEASE_DATE="20160831A"
    STARTABLE="true"
  >
    <SIGNATURE />
  </HEADER>

  <FAMILIES>
    <FAMILY>Business_Intelligence/Jasper</FAMILY>
  </FAMILIES>

  <DOCUMENTATION>
    <URL />
  </DOCUMENTATION>

  <CONNECTORS>
    <CONNECTOR CTYPE="ITERATE" MAX_OUTPUT="1" MAX_INPUT="1" />
    <CONNECTOR CTYPE="FLOW" MAX_OUTPUT="0" MAX_INPUT="1" />
    <CONNECTOR CTYPE="SUBJOB_OK" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="SUBJOB_ERROR" MAX_INPUT="1" MAX_OUTPUT="1"/>
    <CONNECTOR CTYPE="COMPONENT_OK" />
    <CONNECTOR CTYPE="COMPONENT_ERROR" />
    <CONNECTOR CTYPE="RUN_IF" />
  </CONNECTORS>

  <PARAMETERS>

    <PARAMETER NAME="USE_EXISTING_CLIENT" FIELD="CHECK" NUM_ROW="1" REQUIRED="true" />
   	<PARAMETER
      	NAME="CLIENT_COMPONENT"
      	FIELD="COMPONENT_LIST"
      	FILTER="tJasperServer"
      	NUM_ROW="1" 
      	REQUIRED="true"
      	SHOW_IF="USE_EXISTING_CLIENT == 'true'"
   	/>

    <PARAMETER NAME="SERVICE_REPOSITORY_URL" FIELD="TEXT" NUM_ROW="10" REQUIRED="true" SHOW_IF="USE_EXISTING_CLIENT == 'false'">
      <DEFAULT>"http://localhost:8080/jasperserver/services/repository"</DEFAULT>
    </PARAMETER>
    
    <PARAMETER NAME="SERVICE_USER" FIELD="TEXT" NUM_ROW="20" REQUIRED="true" SHOW_IF="USE_EXISTING_CLIENT == 'false'">
      <DEFAULT>"jasperadmin"</DEFAULT>
    </PARAMETER>
    
	<PARAMETER NAME="SERVICE_PASSWORD" FIELD="TEXT" NUM_ROW="20" REQUIRED="true" SHOW_IF="USE_EXISTING_CLIENT == 'false'">
	  <DEFAULT>"jasperadmin"</DEFAULT>
	</PARAMETER> 

    <PARAMETER NAME="SOURCE_URI" FIELD="TEXT" NUM_ROW="30" REQUIRED="true">
      <DEFAULT>"/reports/samples/my_file.txt"</DEFAULT>
    </PARAMETER>
    
    <PARAMETER NAME="TARGET_FOLDER_URI" FIELD="TEXT" NUM_ROW="40" REQUIRED="true">
      <DEFAULT>"/reports/output"</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="CREATE_FOLDER" FIELD="CHECK" NUM_ROW="50" REQUIRED="true">
      <DEFAULT>true</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="MOVE" FIELD="CHECK" NUM_ROW="50" >
    	<DEFAULT>false</DEFAULT>
    </PARAMETER>

    <PARAMETER NAME="OVERWRITE" FIELD="CHECK" NUM_ROW="50" >
    	<DEFAULT>false</DEFAULT>
    </PARAMETER>

  </PARAMETERS>

  <ADVANCED_PARAMETERS>
	
	<PARAMETER NAME="TIMEOUT" FIELD="TEXT" NUM_ROW="10" SHOW_IF="USE_EXISTING_CLIENT == 'false'">
	  <DEFAULT>30000</DEFAULT>
	</PARAMETER> 
	
  </ADVANCED_PARAMETERS>

  <CODEGENERATION>
	<IMPORTS>
      <IMPORT NAME="JasperRepoLib" MODULE="cimt-talendcomp-jasperservrepo-2.2.jar" REQUIRED_IF="USE_EXISTING_CLIENT == 'false'" />
    </IMPORTS>
  </CODEGENERATION>

  <RETURNS>
    <RETURN NAME="TARGET_URI" TYPE="id_String" AVAILABILITY="AFTER" />
    <RETURN NAME="FILE_DOWNLOAD_LINK" TYPE="id_String" AVAILABILITY="AFTER" />
    <RETURN NAME="FOLDER_CREATED" TYPE="id_Boolean" AVAILABILITY="AFTER" />
    <RETURN NAME="FILE_NAME" TYPE="id_String" AVAILABILITY="AFTER" />
  </RETURNS>

</COMPONENT>